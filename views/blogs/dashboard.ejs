<%- include('../partials/header') %>

    <div class="container mt-5">
        <h2>Dashboard</h2>
        <div class="d-flex justify-content-between border p-3 rounded">
            <% if (user?.profileImage) { %>
                <h4 class="ms-5">Welcome, <br>
                    <%= user?.email %>
                </h4>
                <img src="<%= user.profileImage %>" alt="Profile Image" class="rounded-circle"
                    style="width:100px;height:100px">
                <% } %>
        </div>
        <div class="d-flex align-items-center justify-content-between">
            <h3 class="mt-5">Your Blogs</h3>
            <a href="/blogs/create" class="btn btn-primary">Create New Blog</a>
        </div>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% blogs?.forEach(blog=> { %>
                    <tr>
                        <td>
                            <%= blog.title %>
                        </td>
                        <td><img src="/uploads/<%= blog.image %>" alt="Blog Image" width="50"></td>
                        <td>
                            <%= blog.description.substring(0, 50) %>...
                        </td>
                        <td>
                            <a href="/blogs/<%= blog._id %>" class="btn btn-primary">View</a>
                            <a href="/blogs/edit/<%= blog._id %>" class="btn btn-warning">Edit</a>
                            <a href="/blogs/delete/<%= blog._id %>" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this blog?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer') %>